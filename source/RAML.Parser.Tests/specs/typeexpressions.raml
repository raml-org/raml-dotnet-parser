#%RAML 1.0
title: Movies v 1
version: 1.0
baseUri: http://movies.com/api
mediaType: application/json
types:
    Movie: 
        type: object
        properties:
            id: integer
            name: 
                type: string
                required: true
                maxLength: 255
            director: string
            genre: string
            cast: string
            duration: 
                type: number
                minimum: 1
                required: false
            storyline?: string
            language: string
            rented?: boolean
        example: |
            {
                "id" : 1,
                "name": "Big Fish",
                "director": "Tim Burton",
                "genre": "Drama, Fantasy",
                "cast": "Ewan McGregor, Albert Finney, Billy Crudup",
                "language": "English"
            }
/movies:
  get:
    description: gets all movies in the catalogue
    responses:
      200:
          body:
            type: Movie[]
  put:
    description: adds a movie to the catalogue
    body:
      type: string | Movie
  post:
    description: adds a movie to the catalogue
    body:
      schema: (string | Movie)[]